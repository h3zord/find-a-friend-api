generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  DOG
  CAT
  BIRD
}

enum Sex {
  MALE
  FEMALE
}

model Pet {
  id         String   @id @default(uuid())
  name       String
  type       Type
  age        Int
  color      String
  sex        Sex
  created_at DateTime @default(now())
  update_at  DateTime @updatedAt
}

model Organization {
  id          String  @id @default(uuid())
  name        String
  description String?
  phone       String
  adress      String
  city        String
}
