generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  DOG
  CAT
  BIRD
}

enum Sex {
  MALE
  FEMALE
}

model Pet {
  id            String   @id @default(uuid())
  name          String
  type          Type
  age_in_months Int
  color         String
  sex           Sex
  created_at    DateTime @default(now())
  update_at     DateTime @updatedAt

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("pets")
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  email         String
  password_hash String
  description   String?
  phone         String
  adress        String
  city          String
  created_at    DateTime @default(now())
  update_at     DateTime @updatedAt

  Pets Pet[]

  @@map("organizations")
}
